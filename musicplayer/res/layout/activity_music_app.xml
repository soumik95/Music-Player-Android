<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.musicapp.MusicApp" >

    <ImageView
        android:id="@+id/ma_iv1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/play" />

    <ImageButton
        android:id="@+id/ima_ib1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ma_iv1"
        android:layout_marginRight="14dp"
        android:background="#fff"
        android:visibility="gone"
        android:src="@android:drawable/ic_menu_sort_by_size" />

    <TextView
        android:id="@+id/ma_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ima_ib1"
        android:layout_centerHorizontal="true"
        android:text="Song name"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/ma_iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_alignLeft="@+id/ma_iv1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ma_iv1"
        android:src="@drawable/play" />

    <SeekBar
        android:id="@+id/ma_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ma_iv2"
        android:layout_below="@+id/ma_iv2"
        android:paddingTop="60dp"
        android:layout_marginTop="14dp" />

    <ImageButton
        android:id="@+id/ma_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ma_sb"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_media_pause" />

    <ImageButton
        android:id="@+id/ma_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ma_sb"
        android:layout_toRightOf="@+id/ma_play"
        android:src="@android:drawable/ic_media_next" />

    <ImageButton
        android:id="@+id/ma_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ma_play"
        android:layout_toLeftOf="@+id/ma_play"
        android:src="@android:drawable/ic_media_previous" />

    <ImageButton
        android:id="@+id/ma_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ma_next"
        android:layout_toRightOf="@+id/ma_next"
        android:src="@android:drawable/ic_menu_rotate" />

    <ImageButton
        android:id="@+id/ma_shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ma_prev"
        android:layout_alignLeft="@+id/ma_sb"
        android:layout_below="@+id/ma_sb"
        android:layout_toLeftOf="@+id/ma_prev"
        android:src="@drawable/shuffle" />

    <TextView
        android:id="@+id/ma_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ma_times"
        android:layout_below="@+id/ma_iv2"
        android:text="00:00"
        android:paddingTop="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
